{% block title %}Compte{% endblock %}

{% block body %}
    <h1>Compte</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ compte.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ compte.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ compte.prenom }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ compte.mail }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ compte.age }}</td>
            </tr>
            <tr>
                <th>DateNaissance</th>
                <td>{{ compte.dateNaissance ? compte.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
